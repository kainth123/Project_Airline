@page
@model Project_Airline.Pages.IndexModel
@{
}
<h1>welcome</h1>

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Airline API</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>


<body style="background-color:hotpink;">

    <div>
        <!-- Navigation bar code -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-warning">
            <a class="navbar-brand" href="#">Airline Data</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <button class="btn btn-outline-dark" data-toggle="modal" data-target="#addAirline">Add New Data</button>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- following division is creating main area of the web page where all books data will display -->
        <div class="container">
            <div class="row" id="allAirlines">
            </div>
        </div>
    </div>

    <!-- below mentioned code will create the template to add a new book -->
    <div class="modal" tabindex="-1" role="dialog" id="addAirline">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Airlines</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="Airline_Name">Airline Name</label>
                            <input type="text" class="form-control" id="airline_Name" aria-describedby="Airline_NameHelp" placeholder="Enter Airline Name">

                        </div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="text" class="form-control" id="airline_Email" aria-describedby="EmailHelp" placeholder="Enter Airline Email">

                        </div>
                        <div class="form-group">
                            <label for="Mobile">Mobile</label>
                            <input type="text" class="form-control" id="airline_Mobile" aria-describedby="MobileHelp" placeholder="Enter Airline Mobile Number">
                        </div>
                        <div class="form-group">
                            <label for="Ticket_Name">Ticket Name</label>
                            <input type="text" class="form-control" id="ticket_Name" aria-describedby="ticket_NameHelp" placeholder="Enter Name of the Ticket">
                        </div>
                        <div class="form-group">
                            <label for="Cost">Cost</label>
                            <input type="text" class="form-control" id="cost" aria-describedby="costHelp" placeholder="Enter Price of the Ticket">
                        </div>
                        <div class="form-group" id="result">


                        </div>
                        <button type="button" class="btn btn-primary" onclick="addAirline()">Add Airline</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                </div>
            </div>
        </div>
    </div>

    <!-- below mentioned code will create the template to Update a new book -->
    <div class="modal" tabindex="-1" role="dialog" id="UpdateAirlines">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Airline Data</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <input type="hidden" class="form-control" id="Update_id" aria-describedby="IdHelp">
                        </div>
                        <div class="form-group">
                            <label for="Airline_Name">Airline Name</label>
                            <input type="text" class="form-control" id="Update_student_Name" aria-describedby="Airline_NameHelp">
                        </div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="text" class="form-control" id="Update_Email" aria-describedby="EmailHelp">
                        </div>
                        <div class="form-group">
                            <label for="Mobile">Mobile</label>
                            <input type="text" class="form-control" id="Update_Mobile" aria-describedby="MobileHelp">
                        </div>
                        <div class="form-group">
                            <label for="Ticket_Name">Ticket Name</label>
                            <input type="text" class="form-control" id="Update_ticket_Name" aria-describedby="ticket_NameHelp">
                        </div>
                        <div class="form-group">
                            <label for="Cost">Cost</label>
                            <input type="text" class="form-control" id="Update_Cost" aria-describedby="CostHelp">
                        </div>
                        <div class="form-group" id="update_result">


                        </div>
                        <button type="button" class="btn btn-primary" onclick="updateAirline()">Update</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                </div>
            </div>
        </div>
    </div>

    <! -- java script files that will help to link the front end and back end -->
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script>
        var uri = 'api/Airlines';
        //Java script main function so JS start from here
        $(document).ready(function () {
            $.getJSON(uri)
                .done(function (data) {
                    $("#AirlinesTemplate").tmpl(data).appendTo("#allAirlines");
                });
        });
        // function to get all airlines data and show on web page
        function getAllAirlines() {
            $.getJSON(uri)
                .done(function (data) {
                    $("#allAirlines").text("");
                    $("#AirlinesTemplate").tmpl(data).appendTo("#allAirlines");
                });
        }
        // function to add data for new airline
        function addAirline() {
            var _airline_Name = $('#airline_Name').val();
            var _airline_Email = $('#airline_Email').val();
            var _airline_Mobile = $('#airline_Mobile').val();
            var _ticket_Name = $('#ticket_Name').val();
            var _airline_Cost = $('#Cost').val();

            var Airline = {
                airline_Name: _airline_Name,
                airline_Email: _airline_Email,
                airline_Mobile: _airline_Mobile,
                ticket_Name: _ticket_Name,
                cost: _airline_Cost,





            };
            $.ajax({
                type: "POST",
                url: uri,
                data: JSON.stringify(Airline),
                contentType: "application/json; charset=utf-8"
            }).done(function (response) {
                $("#result").html("New Student data is added successfully");
                getAllAirlines();
            }).fail(function (jqXHR, textStatus) {
                $("#result").html("An error occured when Adding the airline record.");
            });
        }
        //funtion to delete a particular airline based on id
        function remove(id) {
            var yes = confirm("Are you sure you want to delete this airline?");
            if (yes) {
                $.ajax({
                    type: "DELETE",
                    url: uri + "/" + id,
                }).done(function (response) {
                    $("#result").html("Airline data is deleted successfully");
                    getAllAirlines();
                }).fail(function (jqXHR, textStatus) {
                    $("#result").html("An error occured when deleting the airline record.");
                });
            }
        }
        // funtion to fill the data into update template
        function getAirlineForUpdate(id) {
            $.ajax({
                type: "GET",
                url: uri + "/" + id,
                contentType: "application/json"
            }).done(function (response) {
                $('#Update_id').val(response.id);
                $('#Update_airline_Name').val(response.airline_Name);
                $('#Update_airline_Email').val(response.airline_Email);
                $('#Update_airline_Mobile').val(response.airline_Mobile);
                $('#Update_ticket_Name').val(response.ticket_Name);
                $('#Update_cost').val(response.cost);

            });
        }
        // function to update data of the airline
        function updateAirline() {
            var _airline_Name = $('#Update_airline_Name').val();
            var _airline_Email = $('#Update_airline_Email').val();
            var _airline_Mobile = $('#Update_airline_Mobile').val();
            var _ticket_Name = $('#Update_ticket_Name').val();
            var _cost = $('#Update_cost').val();

            var AirlineUpdate = {
                id: parseInt($('#Update_id').val()),
                airline_Name: _airline_Name,
                airline_Email: _airline_Email,
                airline_Mobile: _airline_Mobile,
                ticket_Name: _ticket_Name,
                cost: _cost,

            };
            $.ajax({
                type: "PUT",
                url: uri + "/" + $('#Update_id').val(),
                data: JSON.stringify(AirlineUpdate),
                contentType: "application/json; charset=utf-8"
            }).done(function (response) {
                $("#update_result").html("Record is updated Successfully");
                getAllAirlines();
            }).fail(function (jqXHR, textStatus) {
                $("#update_result").html("An error occured when updating airline record.");
            });
        }
    </script>

    <!-- below mentioned code will create the template on the web page to display all books -->
    <script id="AirlinesTemplate" type="text/x-jquery-tmpl">
        <div class="col-lg-3" style="margin:10px;">
            <div class="card card text-white bg-dark border-warning mb-3" style="width: 18rem; padding:20px">
                <div class="card-body">
                    <h5 class="card-title">Airline Name: ${airline_Name}</h5>
                    <p class="card-text">Email :  ${Email}</p>
                    <p class="card-text">Mobile : ${Mobile}</p>
                    <p class="card-text">Ticket Name : ${ticket_Name}</p>
                    <p class="card-text">Cost : ${cost}</p>
                </div>
                <span>
                    <button class="btn btn-primary" onclick="getAirlineForUpdate('${id}')" data-toggle="modal" data-target="#UpdateAirlines">Update</button>
                    <a href="#" class="btn btn-danger" onclick="remove('${id}')">Delete</a>
                </span>
            </div>
        </div>
    </script>


</body>
</html>
